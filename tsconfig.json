{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@interfaces": ["./src/interfaces"],
      "@libs/*": ["./src/libs/*"],
      "@locales/*": ["./src/locales/*"],
      "@routes": ["./src/routes"],
      "@scss": ["./src/scss"],
      "@stores": ["./src/stores"],
      "@stores-types/*": ["./src/stores/@types/*"],
      "@utils": ["./src/utils"],
      "@src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "server/**/*.js"]
}
